<% provide(:title, "Аккаунт") %>
<h1>Аккаунт</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "ФИО" %>
      <%= f.text_field :name %>

      <%= f.label :email, "E-Mail" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Новый пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Повторите пароль" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>
      <%= link_to "Назад", :back, :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>