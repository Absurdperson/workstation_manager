<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/message_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Добро пожаловать</h1>

    <h2>
		Авторизуйтесь для начала работы
    </h2>

    <%= link_to "Авторизация", signin_path,
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>
