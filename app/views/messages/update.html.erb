<% provide(:title, "Изменить") %>
<h1>Изменить</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@message) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>

		<%= f.label :description, "Описание" %>
		<%= f.text_field :description %>
				
		<% partner_array = options_for_select(Partner.all.map { |partner| [ partner.name ] } )%>
		<%= f.select(:partner_id, partner_array.to_s, :include_blank => @message.partner_id)  %>

		<% types_array = options_for_select(["Благодарность","Претензия","Информационное","Доверенность","Уведомление"]) %>
		<%=  f.select(:letter_type, types_array.to_s, :include_blank => @message.letter_type)%>

		<%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>
		<%= link_to "Назад", :back, :class => "btn btn-large btn-primary" %>		  
	<% end %>
  </div>
</div>